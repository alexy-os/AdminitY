<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6">Edit Lead User</h1>
  <div class="bg-white dark:bg-slate-800 shadow-md sm:rounded-lg p-6">
    <form action="/lead-users/{{leadUser._id}}" method="POST">
      <input type="hidden" name="_id" value="{{leadUser._id}}">
      <div class="mb-4">
        <label for="username" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Username</label>
        <input type="text" name="username" id="username" value="{{leadUser.username}}" required class="mt-1 px-2 py-1 block w-full rounded-md border border-slate-300 bg-slate-100 outline-none shadow-sm focus:border-sky-300 focus:ring focus:ring-sky-200 focus:ring-opacity-50 dark:bg-slate-700 dark:border-slate-600 dark:text-white">
      </div>
      <div class="mb-4">
        <label for="username_bot" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Bot Username</label>
        <input type="text" name="username_bot" id="username_bot" value="{{leadUser.username_bot}}" required class="mt-1 px-2 py-1 block w-full rounded-md border border-slate-300 bg-slate-100 outline-none shadow-sm focus:border-sky-300 focus:ring focus:ring-sky-200 focus:ring-opacity-50 dark:bg-slate-700 dark:border-slate-600 dark:text-white">
      </div>
      <div class="mb-4">
        <label for="tg_id" class="block text-sm font-medium text-slate-700 dark:text-slate-300">Telegram ID</label>
        <input type="text" name="tg_id" id="tg_id" value="{{leadUser.tg_id}}" required class="mt-1 px-2 py-1 block w-full rounded-md border border-slate-300 bg-slate-100 outline-none shadow-sm focus:border-sky-300 focus:ring focus:ring-sky-200 focus:ring-opacity-50 dark:bg-slate-700 dark:border-slate-600 dark:text-white">
      </div>
      <div class="mt-6">
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
          Update Lead User
        </button>
      </div>
    </form>
  </div>
</div>